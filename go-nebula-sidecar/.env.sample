# Auth backend integration (same Docker network)
AUTH_BACKEND_URL=http://auth-backend:8080
AUTH_BACKEND_TOKEN_VALIDATE_ENDPOINT=/api/nebula/validate-token

# Database (same PostgreSQL as Spring auth app)
DB_HOST=paradedb
DB_PORT=5432
DB_NAME=kos-auth
DB_USERNAME=postgres
DB_PASSWORD=postgres
DATABASE_POOL_SIZE=10

# Nebula configuration
NEBULA_LIGHTHOUSE_IP=192.168.100.1
NEBULA_LIGHTHOUSE_EXTERNAL_IP=your.lighthouse.external.ip
NEBULA_LIGHTHOUSE_PORT=4242
NEBULA_CA_CERT_PATH=/etc/nebula/ca.crt
NEBULA_CA_KEY_PATH=/etc/nebula/ca.key

# Service
SERVICE_PORT=8081
SERVICE_LOG_LEVEL=info
TOKEN_CACHE_TTL_SECONDS=300

# Certificate validity
CERT_VALIDITY_DAYS=365
CERT_RENEWAL_WARNING_DAYS=30
